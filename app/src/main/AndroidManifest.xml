<manifest package="tk.radioactivemineral.metronome"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name="tk.radioactivemineral.metronome.MetronomeActivity"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="tk.radioactivemineral.metronome.SaveDialogActivity"
			android:theme="@style/DialogSaveTheme">
		</activity>
	</application>

</manifest>